# Embedding Model: "openai", "openai-large", "local", or any sentence-transformers model
EMBEDDING_MODEL=openai

# OpenAI API Key (required for OpenAI embeddings and GPT summaries)
OPENAI_API_KEY=sk-your-key-here

# Anthropic API Key (optional, for Claude summaries)
ANTHROPIC_API_KEY=sk-ant-your-key-here

# LLM Model for relevance explanations
LLM_MODEL=gpt-4-turbo

# Vector Store: "chroma" (local) or "pinecone" (cloud)
VECTOR_STORE=chroma

# Pinecone (only needed if VECTOR_STORE=pinecone)
PINECONE_API_KEY=your-pinecone-key
PINECONE_ENVIRONMENT=us-east-1
PINECONE_INDEX_NAME=legal-cases
